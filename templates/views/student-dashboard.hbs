<script>
    window.addEventListener("load",(e)=>{
    console.log('in fetch')
    fetch('/getmyclasses').then((response)=>{
      response.json().then((data)=>{
        for(i in data){
          insertNewClass(data[i])
        }  
        const c = document.getElementsByClassName('a-class')
        
        
        for(j=1;j<data.length+1;j++)
        {
          c[j].addEventListener('click',()=>{
              var el = document.getElementById('submitOTP')
              var el2 = document.getElementById('markByLoc')
                    $('#classes .a-class').click(function(){
                        var n = $('#classes .a-class').index(this) ;
                         el2.addEventListener('click',()=>{
                            if(data[n-1].activeByLoc == true && data[n-1].active == true){
                                if(getLocationS().latitude >= data[n-1].location.minLat && getLocationS().latitude <= data[n-1].location.maxLat && getLocationS().longitude >= data[n-1].location.minLong && getLocationS().longitude <= data[n-1].location.maxLong )
                                {
                                    var child2 = document.createElement("input")
                                    child2.type = "hidden"
                                    child2.name = "classIndex"
                                    child2.value = n-1
                                document.getElementById('activeByLoc').appendChild(child2)
                                document.getElementById('activeByLoc').submit()
                                }
                            }
                        })
                        el.addEventListener('click',()=>{
                            if(data[n-1].active == true && data[n-1].OTP != null){
                                 var child = document.createElement("input")
                            child.type = "hidden"
                            child.value = n-1
                            child.name = 'classIndex'
                            document.getElementById('markbyotp').appendChild(child)
                            document.getElementById('markbyotp').submit()
                        }
                    })
                            
                           
